- form_for @user do |f|
  = f.error_messages
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password, 'Senha'
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation, 'Confimação de Senha'
    %br
    = f.password_field :password_confirmation
  %p
    = f.hidden_field :invitation_token
  %p
    = f.submit "Criar minha conta"
